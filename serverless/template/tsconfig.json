{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": [".git", "dist", ".vscode", "node_modules"]
}
