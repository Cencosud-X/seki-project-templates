{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{{data.group_folder}}/{{data.path}}/src",
  "projectType": "application",
  "targets": {
    "build": {
      "dependsOn": [
        {
          "target": "secrets",
          "projects": "self"
        }
      ],
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/{{data.group_folder}}/{{data.path}}",
        "main": "{{data.group_folder}}/{{data.path}}/src/main.ts",
        "tsConfig": "{{data.group_folder}}/{{data.path}}/tsconfig.app.json",
        "assets": [],
        "webpackConfig": [
          "{{data.group_folder}}/{{data.path}}/webpack.js"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "dependsOn": [
        {
          "target": "secrets",
          "projects": "self"
        }
      ],
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "{{data.path}}:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "{{data.path}}:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/{{data.path}}/**/*.ts"]
      }
    },
    "test": {
      "dependsOn": [
        {
          "target": "secrets",
          "projects": "self"
        }
      ],
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/{{data.path}}"],
      "options": {
        "jestConfig": "apps/{{data.path}}/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "secrets": {
      "executor": "nx:run-commands",
      "options": {
        "command": "seki secrets generate -p={{data.path}}",
        "cwd": "."
      }
    }
  },
  "tags": [
    "{{data.TAG_GOLDEN_REQUIRED}}"
  ]
}